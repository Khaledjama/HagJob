<form asp-controller="UserInformation" asp-action="AddInformationToUser" asp-area="Admin" method="post" enctype="multipart/form-data">


    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Success!</strong> Indicates a successful or positive action.
        </div>
    }
    <input type="hidden" asp-for="UserId" value="@ViewBag.currentUserId" />
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label>UserName</label>
        <input type="text" asp-for="FirstName" class="form-control" id="exampleInputFirstName" placeholder="Enter First Name">

    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" asp-for="LastName" value="" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
               placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label>JobTitle</label>
        <input type="text" asp-for="JobTitle" value="" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
               placeholder="Enter JobTitle">
    </div>
    <div class="form-group">
        <label>phone</label>
        <input type="text" asp-for="Phone" value="" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
               placeholder="Enter Phone">
    </div>
    <div class="form-group">
        <label> Photo </label>
        <input type="file" name="Image"  class="form-control" id="exampleInputPassword" placeholder="Please Select Photo">
    </div>
    <div class="form-group">
        <label>Cv</label>
        <input type="file" name="Cv" asp-for="CV" class="form-control" id="exampleInputPassword" placeholder="Please select CV">
    </div>

    <div class="form-group">
        <button type="submit" id="btn" class="btn btn-primary btn-block">Save</button>
    </div>
    
</form>