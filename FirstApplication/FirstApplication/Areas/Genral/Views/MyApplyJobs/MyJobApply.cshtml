@model IEnumerable<FirstApplication.Models.ApplyJobVm>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css" integrity="sha256-3sPp8BkKUE7QyPSl6VfBByBroQbKxKG7tsusY2mhbVY=" crossorigin="anonymous" />
<link href="~/css/MyApplyJob.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="career-search mb-60">
                <div class="filter-result">
                    @foreach (var item in Model)
                    {
                        <div class="job-box d-md-flex align-items-center justify-content-between mb-30">
                            <div class="job-left my-4 d-md-flex align-items-center flex-wrap">
                                <div class="job-content">
                                    <h5 class="text-center text-md-left">@item.jobs.Name</h5>
                                    <ul class="d-md-flex flex-wrap text-capitalize ff-open-sans">
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-pin mr-2"></i> @item.jobs.Location
                                        </li>
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-money mr-2"></i> @item.jobs.Salary
                                        </li>
                                        <li class="mr-md-4">
                                            <i class="zmdi zmdi-time mr-2"></i> @item.jobs.Time
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="job-right my-4 flex-shrink-0">
                                <a asp-action="Details" asp-controller="Jobs" asp-area="Admin" asp-route-id="@item.jobsId" style="margin-bottom:5px" class="btn d-block w-100 d-sm-inline-block btn-primary">View Job</a>
                                <a asp-action="Cancel" asp-route-Id="@item.Id" class="btn d-block w-100 d-sm-inline-block btn-primary">Cancel Apply</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>