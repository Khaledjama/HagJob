@model FirstApplication.Models.QuestionJobVm

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MainLayout/MainLayout.cshtml";
}
<link href="~/Create/bootstrap.min.css" rel="stylesheet" />
<script src="~/assets/js/bootstrap.min.js"></script>
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery/jquery.js"></script>
<h1>Questions</h1>

<h3>Questions For This Job </h3>
@if (ViewBag.Message != null)
{
    <h2 style="text-align:center">This job Don't Have any Question 
    </h2>
    <a class="btn btn-primary btn-block" asp-route-id="@ViewBag.Id" asp-action="Create" > Create Questions</a>
}
else
{
    <div class="table-responsive text-nowrap">

        <table class="table table-striped">

            <!--Table head-->
            <thead style="text-align:center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.jobs)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Question1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Question2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Question3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Question4)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Question5)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.jobs.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Question1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Question2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Question3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Question4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Question5)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model.Job_Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@Model.Job_Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@Model.Job_Id">Delete</a> |
                    </td>
                </tr>
            </tbody>
            <!--Table body-->


        </table>

    </div>
}